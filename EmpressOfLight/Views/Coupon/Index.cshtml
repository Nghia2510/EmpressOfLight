@model List<Coupon>
@{
    ViewData["Title"] = "Coupon";
}
<table class="table" style="background-color: rgba(255, 255, 255, 0.6); border-radius:10px;">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Code</th>
            <th scope="col">Description</th>
            <th scope="col">Discount</th>
            <th scope="col">Stock</th>
        </tr>
    </thead>
    <tbody>
        @{
            for (int i=0; i<Model.Count; i++)
            {
                <tr>
                    <th scope="row">@i</th>
                    <td>@Model[i].Code</td>
                    <td>@Model[i].Description</td>
                    @{
                        if(Model[i].IsPercent)
                        {
                            <td>@Model[i].Discount %</td>
                        }
                        else
                        {
                            <td>@Model[i].Discount VNĐ</td>
                        }
                    }
                    <td>@Model[i].Stock</td>
                </tr>
            }
        }
        
    </tbody>
</table>